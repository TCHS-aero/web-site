---
import "../styles/global.css";

const {
  title = "TCHS Aero",
  active = "",
} = Astro.props;

const linkClass = (name) =>
  [
    "px-3 py-1 rounded-md text-sm font-semibold transition",
    "text-blue-900 hover:bg-gray-100 hover:underline",
    active === name ? "bg-gray-100 underline" : "",
  ].join(" ");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-white text-gray-900">
    <!-- Top Header -->
    <header class="border-b border-gray-200">
      <div class="mx-auto max-w-6xl px-5 py-7">
        <h1 class="text-center text-4xl font-extrabold tracking-tight">
          TCHS Aero
        </h1>

        <!-- Center links -->
        <nav class="mt-4 flex flex-wrap justify-center gap-2">
          <a class={linkClass("home")} href="/">Home</a>
          <a class={linkClass("about")} href="/about">About us</a>
          <a class={linkClass("news")} href="/news">News</a>
          <a class={linkClass("contact")} href="/contact">Contact</a>
          <a class={linkClass("sponsor")} href="/sponsor">Sponsor</a>
        </nav>
      </div>
    </header>

    <!-- Page content -->
    <main class="mx-auto max-w-6xl px-5 py-10">
      <!-- default “Google Sites” typography -->
      <div class="
        prose prose-lg max-w-none
        prose-h2:mt-10 prose-h2:text-3xl prose-h2:font-extrabold prose-h2:tracking-tight
        prose-h3:text-xl prose-h3:font-bold
        prose-a:text-blue-900
      ">
        <slot />
      </div>
    </main>

    <!-- Footer -->
    <footer class="border-t border-gray-200 bg-gray-50">
      <div class="mx-auto max-w-6xl px-5 py-12">
        <div class="grid gap-10 md:grid-cols-3">
          <div>
            <h2 class="text-xl font-extrabold">TCHS Aero</h2>
            <p class="mt-2 text-gray-700">Let&apos;s revolutionize flight.</p>
          </div>

          <div>
            <h3 class="text-base font-bold">Get Involved</h3>
            <ul class="mt-2 list-disc pl-5 text-gray-700">
              <li>Try out!</li>
              <li>Support us through sponsorships and donations</li>
              <li>Follow our journey on social media</li>
            </ul>

            <h3 class="mt-6 text-base font-bold">About us</h3>
            <p class="mt-2 text-gray-700">
              TCHS Aero is Temple City High School’s student-led autonomous drone team.
            </p>
          </div>

          <div>
            <h3 class="text-base font-bold">Quick links</h3>
            <ul class="mt-2 list-disc pl-5 text-gray-700">
              <li><a class="text-blue-900 hover:underline" href="/">Home</a></li>
              <li><a class="text-blue-900 hover:underline" href="/about">About</a></li>
              <li><a class="text-blue-900 hover:underline" href="/news">News</a></li>
              <li><a class="text-blue-900 hover:underline" href="/contact">Contact</a></li>
              <li><a class="text-blue-900 hover:underline" href="/sponsor">Sponsor</a></li>
            </ul>

            <h3 class="mt-6 text-base font-bold">Follow us</h3>
            <p class="mt-2 text-gray-700">
              Instagram:
              <a
                class="text-blue-900 hover:underline"
                href="https://www.instagram.com/tchs.aero/"
                target="_blank"
                rel="noopener noreferrer"
              >
                @tchs.aero
              </a>
            </p>
          </div>
        </div>

        <p class="mt-10 text-xs text-gray-500">
        </p>
      </div>
    </footer>
  </body>
</html>
